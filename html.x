    <!-- Why Choose SwiftX -->
    <section class="why-choose">
        <h2>Why Choose Anjalika supermarket?</h2>
        <div class="features">
            <div class="feature">
                <img src="fast-delivery.jpg" alt="Fast Delivery">
                <h3>Fast Delivery</h3>
                <p>Get your products delivered within hours.</p>
            </div>
            <div class="feature">
                <img src="local-shops.jpg" alt="Support Local Shops">
                <h3>Support Local Shops</h3>
                <p>Buy from trusted stores near you.</p>
            </div>
            <div class="feature">
